@page
@model LoginModel
@{
    Layout = null; // Optional: No layout for login page
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Вход в систему OncoAI</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <img src="~/images/logo.png" alt="Логотип OncoAI" class="logo" />
        <h1>Вход в систему OncoAI</h1>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
        <form method="post">
            <div class="form-group">
                <label for="username">Имя пользователя:</label>
                <input type="text" id="username" name="username" required value="@Model.Username" />
            </div>
            <div class="form-group">
                <label for="password">Пароль:</label>
                <input type="password" id="password" name="password" required />
            </div>
            <button type="submit" id="loginBtn">Войти</button>
        </form>
    </div>
</body>
</html>